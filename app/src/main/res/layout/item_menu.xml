<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvItemMenu"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/textSecondaryDark"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_home"
            app:tint="@color/textPrimaryLight"></ImageView>

        <TextView
            android:id="@+id/tvTitleMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/backgroundLight"
            android:textStyle="bold"


            tools:text="Que hacer"></TextView>

        <TextView
            android:id="@+id/tvDescriptionMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/backgroundLight"
            tools:text="Que hacer h jhsgdjh gsdhgj gsdjhg jsdghj sgdjgjsd gjgsdjg sjdgjsdhjgsdg"></TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>